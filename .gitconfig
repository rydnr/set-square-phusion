[alias]
	ci = commit
	co = checkout
	st = status
	praise = blame
	lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
	br = branch
    b      = branch
  c      = checkout
  co     = commit
  d      = diff -b
  dc     = diff -b --cached
  ds     = diff -b --stat
	s = status -s
  prev = checkout HEAD^1
    next = "!sh -c \"echo -n git log --reverse --pretty=%H && git branch --no-color | grep '*' | cut -f2\""
# summary of what you're going to push
  ps     = log --pretty=oneline origin/master..
# like "git log", but include the diffs
  w      = whatchanged -p
# changes since we last did a push
  wo     = whatchanged -p origin..
	undo-commit = reset --soft HEAD^
	lg = log --oneline --decorate --all --graph

[apply]
	whitespace = strip

[diff]
	color = auto
	rename = copy

[pager]
	color = true

[status]
	color = auto
[http]
	sslVerify = false
[push]
	default = tracking
[branch]
        autosetupmerge = true
[color]
	ui = true
  diff   = auto
  branch = auto
  status = auto

[rerere]
	enabled = true
[pull]
	rebase = true
